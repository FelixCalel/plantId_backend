{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "nodenext",               
    "moduleResolution": "nodenext",         
    "target": "ES2021",                 
    "lib": ["ESNext"],                  

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src"],      
  "exclude": ["node_modules", "dist"]
}
